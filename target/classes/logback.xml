<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="DEV_HOME" value="/opt/srm/logs" />
	<appender name="rollingCoreLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${DEV_HOME}/trusthub-cobranca-relatorios/trusthub-cobranca-relatorios.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${DEV_HOME}/trusthub-cobranca-relatorios/trusthub-cobranca-relatorios.%d{yyyy-MM-dd}_%i.log</fileNamePattern>
			<maxHistory>30</maxHistory> 
      		<totalSizeCap>500MB</totalSizeCap>
      		<maxFileSize>30MB</maxFileSize>
		</rollingPolicy>
		<encoder>
			<pattern>%date - [%level] - %class in %thread - %message%n</pattern>
		</encoder>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date - [%level] - %class in %thread - %message%n
			</pattern>
		</layout>
	</appender>
	
	<root level="error">
		<appender-ref ref="rollingCoreLog" />
		<appender-ref ref="STDOUT" />
	</root>
	<root level="info" additivity="false">
		<appender-ref ref="rollingCoreLog" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>